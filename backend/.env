# Backend Environment Variables
# Django secret key (REDACTED) - DO NOT COMMIT SECRETS
# Rotate this key immediately if you previously committed it to version control.
SECRET_KEY=<REPLACE_WITH_SECURE_VALUE>

# Google OAuth credentials
GOOGLE_CLIENT_ID=<YOUR_GOOGLE_CLIENT_ID>
GOOGLE_CLIENT_SECRET=<YOUR_GOOGLE_CLIENT_SECRET>

# Stripe payment integration
STRIPE_PUBLIC_KEY=<YOUR_STRIPE_PUBLIC_KEY>
STRIPE_SECRET_KEY=<YOUR_STRIPE_SECRET_KEY>
STRIPE_WEBHOOK_SECRET=<YOUR_STRIPE_WEBHOOK_SECRET>

# Razorpay integration (optional)
RAZORPAY_KEY_ID=<YOUR_RAZORPAY_KEY_ID>
RAZORPAY_KEY_SECRET=<YOUR_RAZORPAY_KEY_SECRET>

# Email configuration
DEFAULT_FROM_EMAIL=noreply@ninjapdf.com
EMAIL_HOST=<YOUR_EMAIL_HOST>
EMAIL_PORT=587
EMAIL_USE_TLS=True
EMAIL_HOST_USER=<YOUR_EMAIL_HOST_USER>
EMAIL_HOST_PASSWORD=<YOUR_EMAIL_HOST_PASSWORD>

# Redis / Celery broker
REDIS_URL=redis://localhost:6379/0

# Storage backend (local, s3, or r2)
STORAGE_BACKEND=local
# If using S3/R2, provide the following:
AWS_ACCESS_KEY_ID=<YOUR_AWS_ACCESS_KEY_ID>
AWS_SECRET_ACCESS_KEY=<YOUR_AWS_SECRET_ACCESS_KEY>
AWS_STORAGE_BUCKET_NAME=<YOUR_BUCKET_NAME>
AWS_S3_ENDPOINT_URL=<YOUR_S3_ENDPOINT_URL>  # only for R2
AWS_S3_REGION_NAME=us-east-1
AWS_S3_CUSTOM_DOMAIN=<YOUR_CUSTOM_DOMAIN>
