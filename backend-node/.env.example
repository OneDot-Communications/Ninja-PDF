PORT=8000
NODE_ENV=development
CLIENT_URL=http://localhost:3000


# Database (PostgreSQL)
# Matches Django's recommended env names
POSTGRES_HOST=127.0.0.1
POSTGRES_PORT=5432
POSTGRES_DB=ninja_pdf_node
POSTGRES_USER=postgres
POSTGRES_PASSWORD=your_password
POSTGRES_SSL=true

# Authentication (JWT)
# Use a strong secret for production
JWT_SECRET=your_jwt_secret_key_change_in_production
JWT_EXPIRES_IN=1h
JWT_REFRESH_EXPIRES_IN=7d
JWT_COOKIE_SECURE=false
JWT_COOKIE_SAMESITE=Lax

# Google Social Auth
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=
GOOGLE_CALLBACK_URL=http://localhost:8000/api/auth/google/callback

# Storage (local, s3, r2)
STORAGE_BACKEND=local
UPLOAD_DIR=uploads

# AWS S3 / Cloudflare R2
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_STORAGE_BUCKET_NAME=
AWS_S3_REGION_NAME=us-east-1
AWS_S3_ENDPOINT_URL= # Required for R2
AWS_S3_CUSTOM_DOMAIN=

# Redis (Job Queue & Caching)
REDIS_URL=redis://127.0.0.1:6379

# Email (SMTP / ZeptoMail)
DEFAULT_FROM_EMAIL=noreply@ninjapdf.com
EMAIL_HOST=smtp.zeptomail.com
EMAIL_PORT=587
EMAIL_USE_TLS=true
EMAIL_HOST_USER=
EMAIL_HOST_PASSWORD=
# If using the ZeptoEmailBackend (API):
ZEPTO_API_KEY=
ZEPTO_API_URL=https://api.zeptomail.in/v1.1/email

# Payments (Stripe)
STRIPE_PUBLIC_KEY=
STRIPE_SECRET_KEY=
STRIPE_WEBHOOK_SECRET=

# Payments (Razorpay)
RAZORPAY_KEY_ID=
RAZORPAY_KEY_SECRET=
